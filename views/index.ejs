<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo App</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
<body>
    <div class="container">
    <h1><%= title %>  </h1>

    <!-- Form Tambah Data -->
    <% if(dataId == "") { %> 
    <form class="row g-3 mt-3" action="/tambah" method="POST"> 
        <div class="col-auto">
            <label for="task" class="visually-hidden">Tulis Kegiatan</label>
             <input type="text" class="form-control"  placeholder="Tulis Kegiatan..." name="task">
            
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-3" onclick="((e)=>e.prevenDefault())">Tambah</button>
        </div>
    </form>
    <% }else if(dataId) { %>
    <form class="row g-3 mt-3" action="/update" method="POST" onsubmit="((e)=>e.preventDefault())"> 
        <div class="col-auto">
            <label for="task" class="visually-hidden">Tulis Kegiatan</label>
             <input type="text" class="form-control"  placeholder="Tulis Kegiatan..." name="task" value="<%= dataId.name_task %> ">
             <input type="hidden" class="form-control"   name="id" value="<%= dataId.id_task %> ">
            
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-3">Update</button>
        </div>
    </form>
    <% } %>  
    <!-- Table Tampil Data -->
    <table class="table mt-2">
        <thead>
            <tr class="text-center">
                <th scope="col">No</th>
                <th scope="col">Nama Kegiatan</th>
                <th scope="col">Aksi</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach((d,i) => { %>
                <tr class="text-center">
                    <th scope="row"><%= i+1 %> </th>
                    <td><%= d.name_task %> </td>
                    <td>
                        <a href="/<%= d.id_task %> "  class="btn btn-warning">Edit</a>
                        <a href="/delete/<%= d.id_task %> " class="btn btn-danger">Hapus</a>
                    </td>
            </tr>
            <% }) %>
            
        </tbody>
    </table>
    </div>



    <!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>
</html>